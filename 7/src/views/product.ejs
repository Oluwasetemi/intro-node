<%- include ("partials/header.ejs") %>

<style>
	div.input {
		display: block;
	}
</style>

<div class="wrapper">
	<h2>Input Product Details</h2>
	<% if (users) { %>
		<form action="/products" method="POST" enctype="multipart/form-data">
			<div class="form-group col-md-6">
				<label for="productId">Product Id:</label>
				<input
					type="text"
					class="form-control"
					name="productId"
					id="productId"
					placeholder="Enter Product Id"
					required
				/>
			</div>
			<div class="form-group col-md-6">
				<label for="productName">Product Name:</label>
				<input
					type="text"
					class="form-control"
					name="productName"
					id="productName"
					placeholder="Enter a Product Name"
					required
				/>
			</div>
			<div class="form-group col-md-6">
				<label for="location">Location:</label>
				<input
					type="text"
					class="form-control"
					name="location"
					id="location"
					placeholder="Enter a Location"
					required
				/>
			</div>
			
			<div class="form-group col-md-6">
				<label for="location">Categories:</label>
				<select id="categories" name="categories" class="form-control" required>
					<option selected disabled>Choose Category</option>
					<option>Vehicles</option>
					<option>Property</option>
					<option>Phones & Tablet</option>
					<option>Electronics</option>
					<option>Computers</option>
					<option>Accessories</option>
					<option>Furnitur & Appliance</option>
					<option>Home Equipments</option>
					<option>Building Materials</option>
					<option>Fashion & Beauty</option>
					<option>Health</option>
					<option>Sports, Arts & Outdoors</option>
					<option>Babies & Kids</option>
					<option>Animals & Pets</option>
					<option>Agriculture & Food</option>
					<option>Office Tools</option>
					<option>Others</option>
				</select>
			</div>

			<!-- <div class="input">
				<label for="quantity">Quantity:</label>
				<input
					type="text"
					class="form-control"
					name="quantity"
					id="quantity"
					placeholder="Enter Quantity"
					required
				/>
			</div> -->
			
			<div class="form-group col-md-6">
				<label for="price">Price:</label>
				<input
					type="text"
					class="form-control"
					name="price"
					id="price"
					placeholder="Enter Product Price"
					required
				/>
			</div>

			<div class="form-group col-md-6">
				<label for="discount">Discount(%):</label>
				<input
					type="number"
					class="form-control"
					name="discount"
					id="discount"
					min="0"
					max="100"
					value="0"
					placeholder="Enter Discount in %"
					required
				/>
			</div>
			
			<div class="form-group col-md-6">
				<label for="userId">User Id:</label>
				<input
					type="text"
					class="form-control"
					name="userId"
					id="userId"
					placeholder="Enter User Id"
					value="<%= users.username %>"
					disabled	
				/>
			</div>
			
			<div class="form-group col-md-6">
				<label for="image">Image:</label>
				<input
					type="file"
					class="form-control"
					name="image"
					id="image"
					placeholder="Enter product Image"
					required
				/>
			</div>
			
			<div class="form-group col-md-6">
				<label for="description">Product Description:</label>
				<textarea class="form-control" type="text" name="description" id="description" placeholder="Enter Product Discription" 
					required> </textarea>
				<!-- <input
					type="text"
					class="form-control"
					name="description"
					id="description"
					placeholder="Enter Product Discription"
					required
				/> -->
			</div>
			
	
			<div class="form-group col-md-6">
				<!-- <input type="button" value="submit ->"> -->
				<button type="submit">Submit</button>
			</div>
		</form>

	<% } %>
</div>

<%- include ("partials/footer.ejs") %>
